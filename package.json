{
	"name": "mevi",
	"version": "0.2.4",
	"description": "Simple web-based image viewer",
	"keywords": [
		"gallery",
		"viewer",
		"photo"
	],
	"bin": {
		"mevi": "./build/main.js"
	},
	"repository": "https://github.com/pajecawav/mevi.git",
	"bugs": "https://github.com/pajecawav/mevi/issues",
	"homepage": "https://github.com/pajecawav/mevi#readme",
	"files": [
		"build/**/*"
	],
	"license": "MIT",
	"scripts": {
		"dev": "run-p -l dev:*",
		"dev:web": "vite",
		"dev:server": "tsx watch --clear-screen=false server/main.ts",
		"build": "rimraf build && run-p -l build:*",
		"build:web": "vite build",
		"build:server": "tsc -p tsconfig.server.json",
		"start": "node build/main.js",
		"lint": "run-p -l lint:*",
		"lint:eslint": "eslint .",
		"lint:tsc": "vue-tsc --noEmit",
		"lint:format": "prettier . --check",
		"format": "prettier . --write",
		"prepare": "husky install",
		"prepublishOnly": "pnpm lint && pnpm build"
	},
	"dependencies": {
		"@fastify/static": "^6.10.2",
		"fastify": "^4.20.0",
		"pino-pretty": "^10.2.0",
		"yargs": "^17.7.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.7",
		"@commitlint/config-conventional": "^17.6.7",
		"@rushstack/eslint-patch": "^1.3.2",
		"@types/node": "^18.17.1",
		"@types/yargs": "^17.0.24",
		"@vitejs/plugin-vue": "^4.2.3",
		"@vue/eslint-config-typescript": "^11.0.3",
		"@vueuse/core": "^10.2.1",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.45.0",
		"eslint-plugin-vue": "^9.15.1",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.3",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.27",
		"prettier": "^3.0.0",
		"rimraf": "^5.0.1",
		"tailwindcss": "^3.3.3",
		"tsx": "^3.12.7",
		"typescript": "^5.1.6",
		"vite": "^4.4.7",
		"vue": "^3.3.4",
		"vue-tsc": "^1.8.6"
	}
}
