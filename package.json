{
	"name": "mevi",
	"version": "0.2.3",
	"description": "Simple web-based image viewer",
	"keywords": [
		"gallery",
		"viewer",
		"photo"
	],
	"bin": {
		"mevi": "./build/main.js"
	},
	"repository": "https://github.com/pajecawav/mevi.git",
	"bugs": "https://github.com/pajecawav/mevi/issues",
	"homepage": "https://github.com/pajecawav/mevi#readme",
	"files": [
		"build/**/*"
	],
	"license": "MIT",
	"scripts": {
		"dev": "run-p -l dev:*",
		"dev:web": "vite",
		"dev:server": "tsx watch --clear-screen=false server/main.ts",
		"build": "rimraf build && run-p -l build:*",
		"build:web": "vite build",
		"build:server": "tsc -p tsconfig.server.json",
		"start": "node build/main.js",
		"lint": "run-p -l lint:*",
		"lint:eslint": "eslint .",
		"lint:tsc": "vue-tsc --noEmit",
		"lint:format": "prettier . --check",
		"format": "prettier . --write",
		"prepare": "husky install",
		"prepublishOnly": "pnpm lint && pnpm build"
	},
	"dependencies": {
		"@fastify/static": "^6.9.0",
		"fastify": "^4.13.0",
		"pino-pretty": "^9.2.0",
		"yargs": "^17.6.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.4.3",
		"@commitlint/config-conventional": "^17.4.3",
		"@rushstack/eslint-patch": "^1.2.0",
		"@types/node": "^18.13.0",
		"@types/yargs": "^17.0.22",
		"@vitejs/plugin-vue": "^4.0.0",
		"@vue/eslint-config-typescript": "^11.0.2",
		"@vueuse/core": "^9.12.0",
		"autoprefixer": "^10.4.13",
		"eslint": "^8.34.0",
		"eslint-plugin-vue": "^9.9.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.1.2",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.21",
		"prettier": "^2.8.4",
		"rimraf": "^4.1.2",
		"tailwindcss": "^3.2.6",
		"tsx": "^3.12.3",
		"typescript": "^4.9.3",
		"vite": "^4.1.0",
		"vue": "^3.2.47",
		"vue-tsc": "^1.0.24"
	}
}
